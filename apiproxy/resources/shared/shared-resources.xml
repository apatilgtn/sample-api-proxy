<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<SharedResources>
    <Resource type="xsl" name="TransformBookResponse">
        <Content><![CDATA[
            <xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
                <xsl:template match="/">
                    <book>
                        <xsl:copy-of select="book/*"/>
                        <available_copies>
                            <xsl:value-of select="book/quantity - book/borrowed"/>
                        </available_copies>
                    </book>
                </xsl:template>
            </xsl:stylesheet>
        ]]></Content>
    </Resource>
</SharedResources>